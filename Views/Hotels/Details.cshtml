@model Hotel_Room_Reservation_Final_Project.Models.Hotel
@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager

@{
    ViewData["Title"] = "Details";
}


<div>
    <h4>Hotel Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HotelName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HotelName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RemainingRooms)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RemainingRooms)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RoomPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RoomPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
    </dl>
</div>


<div>
    @if (SignInManager.IsSignedIn(User) && User.IsInRole("client") )
    {
        if (Model.BookedRooms < Model.TotalRooms)
        {
    <a class="btn btn-primary" href="/RoomReservations/Create/@Model.Id">Reserve a Room</a> 

        }
        else { 
           <h4> All Rooms are booked</h4>
        }
    }
   
</div>
